      window.fbAsyncInit = ->
        FB.init
          appId: '267323596708516'
          status: true
          cookie: true
          xfbml: true
        jQuery.ajax(
          url: '/api/poll'
          dataType: 'json'
          type: 'GET').done (data) ->
          sum = 0
          max = 0
          jQuery.each data, (k, v) ->
            sum += parseInt(v)
            if parseInt(v) > max
              max = parseInt(v)
            return
          if sum > 0
            $('#music').empty data
            jQuery.each data, (k, v) ->
              `var data`
              if legnagyobbmagyar_data.hasOwnProperty(k)
                data2 = legnagyobbmagyar_data[k]
                data2['cat'] = data2['category'].hashCode()
                data = ''
