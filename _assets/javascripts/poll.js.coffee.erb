                $('#music').prepend data
                $('#' + k + ' button.szavazok').click ->
                  data = {}
                  data[k] = 1
                  jQuery.ajax(
                    url: '/api/poll'
                    dataType: 'json'
                    type: 'PATCH'
                    data: votes: data).done((data) ->
                    if data.status == 'error'
                      alert data.message
                    setTimeout (->
                      document.location.reload()
                      return
                    ), 1000
                    return
                  ).fail ->
